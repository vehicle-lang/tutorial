\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \ifbeamercolorempty[fg]{neutral}{%
    %define the neutral color if it is not defined (which may be due to that the neutral color theme is not loaded)
    \setbeamercolor{neutral}{use={structure,palette sidebar primary},fg=palette sidebar primary.fg,bg=structure.fg}
  }{%
    %aau header is defined - nothing to do
  }

  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  %templates
  %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%  %headline
  \setbeamertemplate{headline}{%
    \begin{beamercolorbox}[wd=1.0\paperwidth,ht=2.25ex,dp=1ex,left]{headfooty}%
        \usebeamerfont{section in head/foot}\hspace*{3.5ex}%
        \insertshortauthor\ $\bullet$\ %
                \insertshorttitle%
    \end{beamercolorbox}%
    \neutralheaderbackground%
  }

  %frame title
  \setbeamertemplate{frametitle}{%
    \begin{minipage}[t][\beamer@height][t]{\textwidth-1.5\beamer@logoouterradius}
      {\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle\par}%
      {\usebeamercolor[fg]{framesubtitle}\usebeamerfont{framesubtitle}\insertframesubtitle\par}%
    \end{minipage}
  }

  \ifx\beamer@shownavsym\undefined% insert navigation symbols
    \setbeamertemplate{navigation symbols}{%
      %disable navigation symbols
    }
  \fi

  \ifx\beamer@progressstyle\beamer@progresscorner% the progress in the lower right corner
    \setbeamertemplate{footline}[frame number]
  \fi
}%end of beamer specific options

% Other macros
\usepackage{xifthen}
\newcommand{\iconsize}{1.3em}
\newcommand{\icon}[2][inline]{%
\ifthenelse{\equal{#1}{inline}}{% THEN
\hspace{1.4em}%
\begin{tikzpicture}[remember picture,overlay]
  \node[] at (-0.9em,0.4em) { \includegraphics[width=\iconsize]{#2} };
\end{tikzpicture}%
}{% ELSE
\begin{tikzpicture}[remember picture,overlay]
  \node[] at (#1) { \includegraphics[width=\iconsize]{#2} };
\end{tikzpicture}%
}}
\newcommand{\titleframe}[1]{%
\begin{frame}{}{}
\centering\Huge\textsc{\color{beamer@headercolor}\bfseries #1}
\end{frame}%
}



